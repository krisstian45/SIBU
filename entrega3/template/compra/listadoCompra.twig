{% extends "ABM.twig" %}

{% block content %}

    <section class="principal">
        <p class="exito"> {{ data.mensaje.exito }} </p>
        <br />
        <input class="enviar" type="button" onclick="location.href='{{ path }}/index.php/?action=Compra&request=vistaCrear';" value="Crear nueva compra" />
        {% if data.listado is empty %}
            <h1>AÃºn no se han registrado compras</h1>
        {% else %}
            <h2>Listado de compras realizadas</h2>
            <table id="listado" class="listado">
                <tr class="categorias">
                    <th id="proveedor">Proveedor</th>
                    <th id="cuitProveedor">CUIT Proveedor</th>
                    <th id="fecha">Fecha</th>
                    <th></th>
                </tr>
                {% for compra in data.listado %}
                    <tr>
                        <td>{{ compra.proveedor }}</td>
                        <td>{{ compra.proveedor_cuit }}</td>
                        <td>{{ compra.fecha }}</td>
                        <td>
                            <a href="{{ path }}/index.php/?action=Compra&request=vistaVerDetalle&id={{ compra.id }}"><img title="Ver" src="https://grupo46.proyecto2016.linti.unlp.edu.ar/entrega1/imagenes/ver.png" class="imagenesListado" alt="Ver"></a>

                            <a href="{{ path }}/index.php/?action=Compra&request=vistaModificar&idCompra={{ compra.id }}"><img title="Editar" src="https://grupo46.proyecto2016.linti.unlp.edu.ar/entrega1/imagenes/editar.png" class="imagenesListado" alt="Editar"></a>

                            <a href="{{ path }}/index.php/?action=Compra&request=vistaEliminar&idCompra={{ compra.id }}&fecha={{ compra.fecha }}"><img title="Eliminar" src="https://grupo46.proyecto2016.linti.unlp.edu.ar/entrega1/imagenes/eliminar.png" class="imagenesListado" alt="Eliminar"></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div id="black" class="margen">
            </div>
        {% endif %}
    </section>

{% endblock %}