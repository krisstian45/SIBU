{% extends "ABM.twig" %}

{% block content %}

    <section class="principal">
        <p class="exito">{{ data.mensaje.exito }}</p>
        <br />
        <input class="enviar" type="button" onclick="location.href='{{ path }}/index.php/?action=Producto&request=vistaCrear';" value="Crear nuevo producto" />
        <h2>Listado de productos</h2>
        {% if data.listado is empty %}
            <p>No hay productos para ser listados</p>
        {% else %}
            <table id="listado" class="listado">
                <tr class="categorias">
                    <th id="idProducto">id</th>
                    <th id="nombreProducto">Nombre</th>
                    <th id="marcaProducto">Marca</th>
                    <th id="codigoBarraProducto">Codigo barra</th>
                    <th id="stockProducto">Stock </th>
                    <th id="stockMinProducto">Stock Minimo</th>
                    <th id="fechaAltaProducto">Fecha alta</th>
                    <th id="proveedorProducto">Proveedor</th>
                    <th id="precioUniProducto">Precio unitario</th>
                    <th id="descripcionProducto">Descripcion</th>
                    <th id="categoriaProducto">Categor√≠a</th>
                    <th id="operacionesProducto">Operaciones</th>
                </tr>
                {% for producto in data.listado %}
                    <tr>
                        <td>{{ producto[0] }}</td>
                        <td>{{ producto[1] }}</td>
                        <td>{{ producto.marca }}</td>
                        <td>{{ producto.codigo_barra}}</td>
                        <td>{{ producto.stock }}</td>
                        <td>{{ producto.stock_minimo }}</td>
                        <td>{{ producto.fecha_alta }}</td>
                        <td>{{ producto.proveedor }}</td>
                        <td>{{ producto.precio_venta_unitario }}</td>
                        <td>{{ producto.descripcion }}</td>
                        <td>{{ producto.nombre }}</td>
                        <td>
                            <a href="{{ path }}/index.php/?action=Producto&request=vistaModificar&producto={{ producto[0] }}"><img title="Editar" src="https://grupo46.proyecto2016.linti.unlp.edu.ar/entrega1/imagenes/editar.png" class="imagenesListado" alt="Editar"></a>

                            <a href="{{ path }}/index.php/?action=Producto&request=vistaBorrar&producto={{ producto[0]}}"><img title="Eliminar" src="https://grupo46.proyecto2016.linti.unlp.edu.ar/entrega1/imagenes/eliminar.png" class="imagenesListado" alt="Eliminar"></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div id="black" class="margen">
            </div>
        {% endif %}
    </section>

{% endblock %}